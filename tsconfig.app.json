{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "strict": false,
    "paths": {
      "@/*": ["src/*"],
      "@COM/*": ["src/components/*"],
      "@hook/*": ["src/hook/*"],
      "vuex": ["./node_modules/vuex/types"]
    }
  },
}
